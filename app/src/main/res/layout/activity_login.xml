<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context=".telas.LoginActivity">


    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindo ao"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/welcome_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:hint="Digite seu login"
        android:textColor="@color/cardview_dark_background"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/loginText"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:text="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:gravity="center"
        android:ems="10"
        android:layout_below="@+id/loginText"
        android:layout_alignStart="@+id/loginText"
        android:layout_marginTop="31dp"
        android:id="@+id/senhaText"
        android:textColor="@color/cardview_dark_background"/>

    <Button
        android:text="ACESSAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:id="@+id/buttonAcessar"
        android:layout_below="@+id/senhaText"
        android:layout_alignStart="@+id/senhaText"
        android:layout_alignEnd="@+id/senhaText"
        android:background="@android:color/darker_gray" />

    <Button
        android:text="CADASTRAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCadastro"
        android:layout_below="@+id/buttonAcessar"
        android:layout_alignStart="@+id/buttonAcessar"
        android:layout_alignEnd="@+id/buttonAcessar"
        style="@style/Widget.AppCompat.Button.Small" />


</RelativeLayout>
